pipeline {
    agent any
    stages {
        stage('Ansible - Run Playbooks') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'vault_terraform_login',
                    passwordVariable: 'SECRET_ID',
                    usernameVariable: 'ROLE_ID'
                )]) {
                    sh """
                        ~/bin/rocket_hook.sh ${env.JOB_NAME} 'Terraform Init STARTING' ${env.BUILD_URL} #0000ff
                        export VAULT_CAPATH
                        export VAULT_ADDR
                        export CONSUL_CACERT=$VAULT_CAPATH
                        export REQUESTS_CA_BUNDLE=$VAULT_CAPATH
                        . ./vault_consul_setup.bash
                        ansible-playbook -i consul_inventory k8s.yml
                        ~/bin/rocket_hook.sh ${env.JOB_NAME} 'Terraform Init COMPLETE' ${env.BUILD_URL} #0000ff
                    """
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
        success {
            sh "~/bin/rocket_hook.sh ${env.JOB_NAME} 'SUCCESS' ${env.BUILD_URL} #00ff00"
        }
        failure {
            sh "~/bin/rocket_hook.sh ${env.JOB_NAME} 'FAILURE' ${env.BUILD_URL} #ff0000"
        }
    }
}
